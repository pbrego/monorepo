{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "src",
        "declaration": true,
        "declarationDir": "dist",
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "lib": ["es6", "dom", "es2016", "es2017", "ES2019"],
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es5",
        "allowJs": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "isolatedModules": true,
        "noEmit": true
    },
    "include": ["**/*.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "dist", "**/*.config.ts", "**/*.setup.ts"]
}
